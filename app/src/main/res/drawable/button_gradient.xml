<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#5A189A"
                android:endColor="#0077B6"
                android:angle="45" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#7B2CBF"
                android:endColor="#3A86FF"
                android:angle="45" />
            <corners android:radius="14dp" />
            <stroke android:width="1dp" android:color="#C77DFF"/>
        </shape>
    </item>

</selector>